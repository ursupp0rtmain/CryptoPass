# CryptoPass Production Environment
# Copy to .env: cp .env.example .env

# Ceramic admin seed (32-byte hex) - generate: openssl rand -hex 32
CERAMIC_ADMIN_SEED=

# Ceramic admin DID (derived from seed) - generate: node generate-secrets.mjs
CERAMIC_ADMIN_DID=

# Network: mainnet, testnet-clay, or inmemory
CERAMIC_NETWORK=mainnet

# Ethereum RPC for anchoring (required for mainnet)
# Free at: https://alchemy.com - use Ethereum Mainnet, NOT Base!
ETH_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# IPFS storage limit
IPFS_STORAGE_MAX=50GB

# Your domains
FRONTEND_DOMAIN=app.yourdomain.com
CERAMIC_DOMAIN=ceramic.yourdomain.com
IPFS_GATEWAY_DOMAIN=ipfs.yourdomain.com

# Base Chain for ENS/Basenames (optional)
BASE_RPC_URL=https://mainnet.base.org
ENS_UPDATER_PRIVATE_KEY=
